<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamtesla.satish.slambook">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.teamtesla.satish.slambook.Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.teamtesla.satish.slambook.ViewDetails"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name="com.teamtesla.satish.slambook.Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name="com.teamtesla.satish.slambook.AddDetails"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name="com.teamtesla.satish.slambook.SignUp"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name="com.teamtesla.satish.slambook.ShowDetails"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

    </application>

</manifest>