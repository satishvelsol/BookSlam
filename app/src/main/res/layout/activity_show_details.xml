<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/name"/>
            <TextView
                android:id="@+id/name_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_right_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/nick_name"/>
            <TextView
                android:id="@+id/nick_name_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_left_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/date_of_birth"/>
            <TextView
                android:id="@+id/dob_label"
                android:textSize="22sp"
                style="@style/show_details_textview_label" />
            <TextView
                style="@style/show_details_cloud_design_right_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/mobile"/>
            <TextView
                android:id="@+id/mobile_label"
                android:textSize="22sp"
                style="@style/show_details_textview_label" />
            <TextView
                style="@style/show_details_cloud_design_left_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/address"/>
            <TextView
                android:id="@+id/address_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_right_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/best_friend"/>
            <TextView
                android:id="@+id/bfriend_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_left_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/favourite_dishes"/>
            <TextView
                android:id="@+id/dish_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_right_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/favourite_color"/>
            <TextView
                android:id="@+id/color_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_left_part"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/show_details_relative_layout">
            <TextView
                style="@style/show_details_textview_references"
                android:text="@string/hobbies"/>
            <TextView
                android:id="@+id/hobbies_label"
                style="@style/show_details_textview_label"/>
            <TextView
                style="@style/show_details_cloud_design_right_part"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
