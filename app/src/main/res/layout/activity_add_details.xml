<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/adddetails_heading"
        style="@style/heading"
        android:text="Add to Slambook"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
    <ScrollView
        android:layout_below="@+id/adddetails_heading"
        android:layout_width="match_parent"
        android:layout_above="@+id/adddetails_bottom_bar"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <EditText
                android:id="@+id/name_input"
                style="@style/edit_text"
                android:hint="Name"/>
            <EditText
                android:id="@+id/nick_name_input"
                style="@style/edit_text"
                android:hint="Friends call me"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/dob_input"
                style="@style/edit_text"
                android:hint="Day when i was born"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/mobile_input"
                style="@style/edit_text"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Call me @"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/address_input"
                style="@style/edit_text"
                android:hint="I'm from"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/bestfriend_input"
                style="@style/edit_text"
                android:hint="My best friend is"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/fav_dish_input"
                style="@style/edit_text"
                android:hint="Favourite dish"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/fav_color_input"
                style="@style/edit_text"
                android:hint="Favourite colour"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/hobbies_input"
                style="@style/edit_text"
                android:hint="Hobbies"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/adddetails_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:id="@+id/save_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/bshape"
            android:textStyle="bold"
            android:textColor="#F8F3F1"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/clear_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="clear"
            android:background="@drawable/bshape"
            android:textStyle="bold"
            android:textColor="#F8F3F1"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</RelativeLayout>

