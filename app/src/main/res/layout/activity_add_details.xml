<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamtesla.satish.slambook.AddDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="9"
            android:layout_gravity="center">


            <EditText
                android:id="@+id/name_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="My Name is"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/nick_name_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Friends call me"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/dob_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Day when i was born"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/mobile_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Call me @"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/address_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="I'm from"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/bestfriend_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="My best friend is"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/fav_dish_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Favourite dish"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/fav_color_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Favourite colour"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/hobbies_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Hobbies"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/save_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Save"
                    android:background="@drawable/bshape"
                    android:textStyle="bold"
                    android:textColor="#F8F3F1"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/sign_up_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="clear"
                    android:background="@drawable/bshape"
                    android:textStyle="bold"
                    android:textColor="#F8F3F1"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
