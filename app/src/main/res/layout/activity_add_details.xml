<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/adddetails_heading"
        android:text="Adding to Slambook"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<ScrollView
    android:layout_below="@+id/adddetails_heading"
    android:layout_width="match_parent"
    android:layout_above="@+id/adddetails_bottom_bar"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >


            <EditText
                android:id="@+id/name_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="My Name is"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/nick_name_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Friends call me"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/dob_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Day when i was born"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/mobile_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Call me @"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/address_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="I'm from"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/bestfriend_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="My best friend is"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/fav_dish_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Favourite dish"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/fav_color_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Favourite colour"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/hobbies_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Hobbies"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/adddetails_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/save_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/bshape"
            android:textStyle="bold"
            android:textColor="#F8F3F1"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/clear_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="clear"
            android:background="@drawable/bshape"
            android:textStyle="bold"
            android:textColor="#F8F3F1"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</RelativeLayout>

