<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/adddetails_heading"
        android:text="Add to Slam Book"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="cursive"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <ScrollView
        android:layout_below="@+id/adddetails_heading"
        android:layout_width="match_parent"
        android:layout_above="@+id/save_button"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/name_input"
                    style="@style/background_design_edittext"
                    android:hint="My Name is"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/nick_name_input"
                    style="@style/background_design_edittext"
                    android:hint="Friends call me"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/dob_input"
                    style="@style/background_design_edittext"
                    android:hint="Day when i was born" />
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/mobile_input"
                    style="@style/background_design_edittext"
                    android:hint="Call me @"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/address_input"
                    style="@style/background_design_edittext"
                    android:hint="I'm from" />
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/bestfriend_input"
                    style="@style/background_design_edittext"
                    android:hint="My best friend is"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/fav_dish_input"
                    style="@style/background_design_edittext"
                    android:hint="Favourite dish"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/fav_color_input"
                    style="@style/background_design_edittext"
                    android:hint="Favourite colour"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/background_design_linearlayout">
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/hobbies_input"
                    style="@style/background_design_edittext"
                    android:hint="Hobbies"/>
                <LinearLayout
                    style="@style/background_design_sub_linearlayout"
                    android:orientation="vertical">
                    <TextView
                        style="@style/background_design_textview"/>
                    <TextView
                        style="@style/background_design_textview"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="serif"
        android:layout_margin="10dp"
        android:background="@drawable/add_details_button"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>

