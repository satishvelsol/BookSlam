<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.teamtesla.satish.slambook.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="SLAMBOOK"
                android:fontFamily="cursive"
                android:textSize="35sp"
                android:textStyle="bold"
               android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/name_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Name"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="#938F93"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/email_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Email"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="#938F93"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/mobile_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:maxLength="10"
                android:inputType="number"
                android:hint="Mobile Number"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="#938F93"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/password_input"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="14"
                android:hint="Password"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#938F93"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="1"
                >
                <Button
                    android:id="@+id/sign_up_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="signup"
                    android:background="@drawable/bshape"
                    android:textStyle="bold"
                    android:textColor="#F8F3F1"
                    android:layout_weight="01"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/msz"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="16sp"                    android:textStyle="bold|italic"
                    android:textColor="#938F93"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/link_login"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="CLICK HERE"
                    android:textColor="#3B393B"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
