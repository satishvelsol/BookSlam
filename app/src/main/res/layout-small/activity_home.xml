<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/teddy_bear_holding"
    tools:context="com.teamtesla.satish.slambook.Home">
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:weightSum="2">
        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_friend"
            android:background="@drawable/home_add"
            android:textStyle="bold"
            android:textSize="8sp"
            android:paddingTop="5dp"
            android:textAllCaps="false"
            android:textColor="#F8F3F1"
            android:fontFamily="serif"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_friends"
            android:background="@drawable/home_view"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:paddingBottom="5dp"
            android:fontFamily="serif"
            android:textSize="8sp"
            android:textColor="#F8F3F1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>

